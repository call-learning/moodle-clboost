{{!
    @template theme_cboost/kids-frontpage-content

    Example context (json):
    {
        "isloggedin": true,
    }
}}
<div>
    <div class="jumbotron p-4 p-md-5 pb-5 mb-1 text-white rounded bg-primary">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic">{{themeconfig.kids_tagline}}</span></h1>
            <p class="lead my-3">{{themeconfig.kids_slogan}}</p>
            <p class="lead my-3"><br></p>
        </div>
        <p class="lead text-center">
            <a class="btn btn-secondary btn-lg" href="/login/index.php" role="button">Connect</a>
        </p>
    </div>
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {{#carousel}}
                <div class="carousel-item active">
                    <img src="{{image}}" alt="{{label}}" class="d-block w-100">
                </div>
            {{/carousel}}
        </div>
    </div>
</div>