{{!
    @template theme_clboost/settings_link_page

    Displays the admin tree as a list of grouped links.

    Example context (json):
    {
        "node": {
            "text": "Root of menu",
            "key": "test0",
            "display": true,
            "children": [
                {
                    "text": "Child of menu",
                    "key": "test1",
                    "display": true,
                    "children": []
                }
            ]
        }
    }
}}

<ul class="nav nav-tabs" role="tablist">
<!-- First the top most node and immediate children -->
    <li class="nav-item">
        <a class="nav-link active" href="#dblink{{uniqid}}{{node.key}}" data-toggle="tab" role="tab">{{node.text}}</a>
    </li>
<!-- Now the first level children with sub nodes -->
{{#node.children}}
    {{#has_children}}
        {{#display}}
            {{^is_short_branch}}
                <li class="nav-item">
                    <a class="nav-link" href="#dblink{{uniqid}}{{key}}" data-toggle="tab" role="tab">{{text}}</a>
                </li>
            {{/is_short_branch}}
        {{/display}}
    {{/has_children}}
{{/node.children}}
</ul>

<div class="tab-content mt-3">
    <div class="tab-pane active" id="dblink{{uniqid}}{{node.key}}" role="tabpanel">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                </div>
                <div class="col">
                    <ul class="list-unstyled">
                        {{#node.children}}
                            {{^has_children}}
                                {{#display}}
                                    <li><a href="{{{action}}}">{{text}}</a></li>
                                {{/display}}
                            {{/has_children}}
                        {{/node.children}}
                    </ul>
                </div>
            </div>

            {{#node.children}}
                {{#display}}
                    {{#has_children}}
                        {{#is_short_branch}}
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    {{#action}}<h4><a href="{{action}}">{{text}}</a></h4>{{/action}}
                                    {{^action}}<h4>{{text}}</h4>{{/action}}
                                </div>
                                <div class="col">
                                    <ul class="list-unstyled">
                                        {{#children}}
                                            {{> theme_clboost/modal_settings_link_page_single }}
                                        {{/children}}
                                    </ul>
                                </div>
                            </div>
                        {{/is_short_branch}}
                    {{/has_children}}
                {{/display}}
            {{/node.children}}
        </div>
    </div>
    {{#node.children}}
        {{#has_children}}
            <div class="tab-pane" id="dblink{{uniqid}}{{key}}" role="tabpanel">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-3">
                            {{#action}}<h4><a href="{{action}}">{{text}}</a></h4>{{/action}}
                            {{^action}}<h4>{{text}}</h4>{{/action}}
                        </div>
                        <div class="col-sm-9">
                            <ul class="list-unstyled">
                                {{#children}}
                                    {{#display}}
                                        {{^has_children}}
                                            <li><a href="{{{action}}}">{{text}}</a></li>
                                        {{/has_children}}
                                    {{/display}}
                                {{/children}}
                            </ul>
                        </div>
                    </div>
                    {{#children}}
                        {{#display}}
                            {{#has_children}}
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        {{#action}}<h4><a href="{{action}}">{{text}}</a></h4>{{/action}}
                                        {{^action}}<h4>{{text}}</h4>{{/action}}
                                    </div>
                                    <div class="col-sm-9">
                                        <ul class="list-unstyled">
                                            {{#children}}
                                                {{> theme_clboost/modal_settings_link_page_single }}
                                            {{/children}}
                                        </ul>
                                    </div>
                                </div>
                            {{/has_children}}
                        {{/display}}
                    {{/children}}
                </div>
            </div>
        {{/has_children}}
    {{/node.children}}
</div>
